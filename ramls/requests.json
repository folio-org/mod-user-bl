  "type": "object",
  "description": "Requests",
  "properties": {
    "requests": {
      "type": "array",
      "description": "The requests of a user",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Loan id"
          },
          "requesterId": {
